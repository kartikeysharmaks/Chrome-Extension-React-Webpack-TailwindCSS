{
  "manifest_version": 3,
  "name": "LinkedIn Message Extension",
  "version": "1.0",
  "description": "A Chrome extension to enhance LinkedIn message input.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css" : ["styles.css"]
    }
  ]
}
